{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "types": ["node"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "typeRoots": ["./node_modules/*", "./src/types/*"]
  },
  "include": ["./src/*", "./config/*"],
  "exclude": ["./types"]
}
