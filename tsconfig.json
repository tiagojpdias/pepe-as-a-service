{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "types": ["node", "jest"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["./src/*", "./config/*"]
}
